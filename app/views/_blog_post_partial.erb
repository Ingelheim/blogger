<% @posts.each do |post| %>
<div class="posts">
  <img class="exit" src="http://png.findicons.com/files/icons/557/creme/128/delete.png">

  <a href="/edit?id=<%= post.id %>" data-id="<%= post.id %>"><img class="edit" src="http://www.clker.com/cliparts/4/3/2/e/12065629511862768218qubodup_16x16px-capable_black_and_white_icons_12.svg.med.png"></a>
  
  <p class="blog-title"><%= post.title %></p><br>
  <div class="pics">
  <img src="<%= post.url %>">
</div>
  

<p class="blog-text"><%= post.text %></p>
</div>
<% end%>
